<div class="mb-4 p-5">
  <% for( let project of projects ) { %>
  <div class="card mb-2 w-50 m-auto">
    <div class="card-header">
      <b> Name of the project : </b><%= project.name %>
    </div>
    <div class="card-body">
      <h6 class="card-subtitle mb-2 text-muted">
        <b> Author : </b> <%= project.author %>
      </h6>
      <p class="card-text">
        <b> Description : </b><%= project.description %>
      </p>

      <div class="m-auto text-end">
        <a href="/project/<%=project._id%>" class="btn btn-warning m-auto"
          >Open project</a
        >
      </div>
    </div>
  </div>
  <% } %>
</div>
